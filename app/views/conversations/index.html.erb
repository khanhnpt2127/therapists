<div class="ui segment">
  <h3>Mailbox</h3>
  <div class="ui list">
    <div class=”item”>
      <% if current_user %>
        <% @conversations.each do |conversation| %>
          <% if conversation.sender_id == current_user.id || conversation.recipient_id == current_user.id %>
            <% if conversation.sender_id == current_user.id %>
              <% recipient = User.find(conversation.recipient_id) %>
            <% else %>
              <% recipient = User.find(conversation.sender_id) %>
            <% end %>
          <% end %>
        <% end %>
      <% else %>
        <% @conversations.each do |conversation| %>
          <% if conversation.sender_id == current_host.id || conversation.recipient_id == current_host.id %>
            <% if conversation.sender_id == current_host.id %>
              <% recipient1 = Host.find(conversation.host_id) %>
            <% else %>
              <% recipient1 = Host.find(conversation.sender_id) %>
            <% end %>
          <% end %>
        <% end %>

        <table class="table">
          <thead class="thead thead-default">
            <tr>
              <th>Name</th>
              <th>Content</th>
            </tr>
          </thead>
          <tbody>
            <tr>
              <% if recipient1.present? %>
                <td><%= link_to recipient1.name %>
              <%end %>
              <td><%= link_to recipient.name, conversation_messages_path(conversation)%></td>
            </tr>
          </tbody>
        </table>
      <% end %>
    </div>
  </div>
</div>
<div class="ui segment">
  <h3>All Users</h3>
  <div class="ui list">
    <% @users.each do |user| %>
      <% if user.id != current_user.id %>
        <div class=”item”>
          <%= user.name %> <%= link_to 'Message me!', conversations_path(sender_id: current_user.id, recipient_id: user.id), method: 'post'%>
        </div>
      <% end %>
    <% end %>
    <% @hosts.each do |host| %>
      <%= host.name %> <%= link_to 'Message host',conversations_path(sender_id: current_user.id, host_id: host.id), method: 'post' %>
    <% end %>
  </div>
</div>
