<!DOCTYPE html>
<html>
  <head>
    <title>Therapists</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
  <%= link_to 'Login as Host', host_login_path(pending: true), class: 'btn btn-primary' %>
  <%= link_to 'Login as User', user_login_path(live: true), class: 'btn btn-primary' %>
    <% unless flash.empty? %>
		<% flash.each do |key, value| %>
			<div class="alert alert-danger"><%= value %></div>
		<% end %>
  <% end %> 
  <%=yield %>
  </body>
</html>
